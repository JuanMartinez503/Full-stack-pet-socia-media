{{#each posts}}
<div class="bg-white shadow-lg rounded-lg p-6 mb-8 mx-auto max-w-lg">

  <div class="mb-4 text-center">
    <a href="/posts/{{id}}">
      <img src="{{image}}" >
    </a>
  </div>

  <div class="m-4">
    <p class="text-gray-800"><span class=" text-indigo-500">{{user.username}}</span> : {{description}}</p>
  </div>

  <div class="flex justify-end">
    <p class="text-gray-500 text-sm">{{format_date date_created}}</p>
  </div>

</div>
{{/each}}
